<div class="container w-50">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @event, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :location, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :location, class: "form-control shadow rounded", placeholder: "Location of event" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :date, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :date, rows: 10, class: "form-control shadow rounded", placeholder: "Date of event" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to events listing ]', events_path, class: "text-dark" %>
    </div>
  </div>
</div>

